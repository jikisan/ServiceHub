<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/iv_bookingPhoto"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:src="@drawable/sh_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bookingName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxHeight="42dp"
        android:text="name"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_bookingMonth"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_bookingPhoto"
        app:layout_constraintTop_toTopOf="@+id/iv_bookingPhoto" />

    <TextView
        android:id="@+id/tv_bookingTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:text="00:00 AM"
        android:textAllCaps="true"
        android:textColor="@color/light_blue"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_bookingDate"
        app:layout_constraintStart_toEndOf="@+id/iv_bookingPhoto"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookingName" />

    <TextView
        android:id="@+id/tv_bookingMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_bookingDate"
        app:layout_constraintEnd_toEndOf="@+id/tv_bookingDate"
        app:layout_constraintStart_toStartOf="@+id/tv_bookingDate"
        app:layout_constraintTop_toTopOf="@+id/tv_bookingName" />


    <TextView
        android:id="@+id/tv_bookingDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_bookingTime"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookingTime" />

    <TextView
        android:id="@+id/tv_bookingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="--"
        android:textAllCaps="true"
        android:textColor="@color/light_blue"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.523" />

</androidx.constraintlayout.widget.ConstraintLayout>