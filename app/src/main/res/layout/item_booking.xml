<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bookingPhoto"
        android:layout_width="105dp"
        android:layout_height="74dp"
        android:layout_margin="8dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_focused"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bookingName"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="8dp"
        android:text="name"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/iv_bookingPhoto"
        app:layout_constraintTop_toTopOf="@+id/iv_bookingPhoto" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordered: "
        android:textSize="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_bookingName"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookingName" />

    <TextView
        android:id="@+id/tv_bookingTimeDifferece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" min. ago"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/tv_bookingTimeDifferece"
        app:layout_constraintTop_toTopOf="@+id/tv_bookingTimeDifferece" />

    <TextView
        android:id="@+id/tv_bookingDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Day"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_bookingName" />

    <TextView
        android:id="@+id/tv_bookingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:textAllCaps="true"
        android:textColor="@color/light_blue"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_bookingDay"
        app:layout_constraintStart_toStartOf="@+id/tv_bookingDay"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookingDay" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_bookingPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>